<div id="myCarousel" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active">
			<span class="hidden-xs"><span class="badge">1</span> <%= t.item_select %></span>
			<span class="visible-xs hidden-sm hidden-md hidden-lg">1</span>
		</li>
		<li data-target="" data-slide-to="1" class="inactive">
			<span class="hidden-xs"><span class="badge">2</span> <%= t.category%></span>
			<span class="visible-xs hidden-sm hidden-md hidden-lg">2</span>
		</li>
		<li data-target="" data-slide-to="2" class="inactive">
			<span class="hidden-xs"><span class="badge">3</span> <%= t.price %></span>
			<span class="visible-xs hidden-sm hidden-md hidden-lg">3</span>
		</li>
		<li data-target="" data-slide-to="3" class="inactive">
			<span class="hidden-xs"><span class="badge">4</span> <%= t.summary %></span>
			<span class="visible-xs hidden-sm hidden-md hidden-lg">4</span>
		</li>
	</ol>
	<div id="#car" class="carousel-inner">
		<div id="introslide" class="item active">
			<div class="container">
				<span id="sellspan"><h2><%= t.selling %></h2><input class="typeahead" type="text"></span>
			</div>
		</div>
		<div class="item">
			<div class="container">
				<div class="row">
				  <div class="col-md-12">
				  	<div id="chartdiv" style="height:400px;width:85%;"></div>
				  </div>
				</div>
			</div>
		</div>
		<div class="item">
			<div class="container">
				<div class="row">
				  <div class="col-md-12">
				  	<div id="pricediv" style="height:400px;width:85%;"></div>
				  </div>
				</div>
			</div>
		</div>
		<div class="item">
			<div class="container">
				<%= erb :"analytics/_summary" %>
			</div>
		</div>
	</div>
	<a class="left carousel-control" href="#myCarousel" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div>
